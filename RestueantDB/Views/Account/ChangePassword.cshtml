@model RestueantDB.ModelViews.ChangePassword

@{
    ViewData["Title"] = "ChangePassword";
}



   <div class="card card-outline-secondary">
       <div class="card-header">
          <h3 class="mb-0">Change Password</h3>
            @if(ViewBag.IsCompleted == true)    
            {    
                <div class="alert alert-success mt-1 " role="alert">    
                   Password changed successfully
                </div>
            }
   </div>

    <div class="card-body">
        <form  method="post" class="form" role="form" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword" >Current Password</label>
                <input type="password" class="form-control" asp-for="CurrentPassword" >
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" >New Password</label>
                <input type="password" class="form-control" asp-for="NewPassword"  >
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                   
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" >Confirm Password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword"  >
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-lg float-right">
            </div>
        </form>
    </div>
</div>

