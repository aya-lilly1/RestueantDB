@model RestueantDB.ModelViews.ForgotPassword

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>ForgotPassword</h1>

<hr />
<div class="row">
    <div class="col-md-6 ">
        <div class="card text-center" >
    <div class="card-header h5 text-white bg-primary">Password Reset</div>
    <div class="card-body px-5">
       
                @if(Model?.EmailSent ==true )
                 {
                    <div class="alert alert-success">
                        <p>If you are registered with us ?
                            We have sent an email on you registerd email
                        </p>
                    </div>
                 }
                else
                 {
                     <p class="card-text py-2">
                       Enter your email address and we'll send you an email with instructions to reset your password.
                    </p> 
                    <form method="post">
                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <div class="form-outline">
                             <label class="form-label d-block" asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control my-3" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                         </div>
                        <input type="submit" class="btn btn-primary w-100"   value="Reset password"/>
                    </form>
                    <div class="d-flex justify-content-between mt-4">
                        <a class="" href="#">Login</a>
                        <a class="" href="#">Register</a>
                    </div>
                 }

    </div>
</div>
     
    </div>
</div>





