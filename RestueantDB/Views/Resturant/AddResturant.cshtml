@model RestueantDB.ModelViews.ResturantMV

@{
    ViewData["Title"] = "Add New Resturant";
    }

    

<h1>Add new Resturant</h1>


<hr />
@if(ViewBag.IsSuccess)    
    {    
        <div class="alert alert-success" role="alert">      
         Addition completed successfully. Click <a  asp-action="ShowDetails" asp-controller="Resturant" asp-route-Id="@ViewBag.Id" >here</a>  to view restaurant details
    </div>
}


<div class="row">
    <div class="col-md-10">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="mb-3">
          <label asp-for="ImgeFile" class="control-label"></label>
          <input class="form-control" type="file" asp-for="ImgeFile">
          <span asp-validation-for="ImgeFile" class="text-danger"></span>
        </div>
       
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning text-center col-4 " />
            </div>
        </form>
    </div>
</div>


